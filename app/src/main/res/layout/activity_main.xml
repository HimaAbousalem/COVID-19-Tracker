<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.base.MainActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="com.iti.mobile.covid19tracker.features.all_countries.AllCountriesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:id="@+id/no_countries_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/all_margin"
        android:layout_marginEnd="@dimen/all_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/noData_ImageView"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            app:srcCompat="@android:drawable/ic_input_add" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/noData_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/no_subscriptions"
            android:textAlignment="center" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/retry_again_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/all_margin"
            android:visibility="gone"
           />
    </LinearLayout>
</FrameLayout>